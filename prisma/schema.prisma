// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Room {
  id        Int        @id @default(autoincrement())
  title     String
  cleanings Cleaning[]
}

model Cleaning {
  id      Int      @id @default(autoincrement())
  room    Room     @relation(fields: [roomId], references: [id])
  roomId  Int
  from    DateTime // @db.Time for MySQL
  to      DateTime // @db.Time for MySQL
  cleaner Staff    @relation(fields: [staffId], references: [id])
  staffId Int
}

model Staff {
  id         Int        @id @default(autoincrement())
  firstName  String
  lastName   String
  patronymic String
  Cleaning   Cleaning[]
}
